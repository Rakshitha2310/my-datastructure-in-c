#include<stdio.h>
#define CAP 10
int main(){
    int a[CAP]={10,20,30,40};
    int n=4;
    int pos=2;
    if(n>0 && pos >= 0 && pos < n){
     for(int i=pos;i<n-1;i++){
         a[i]=a[i+1];
     }   
     n--;
    }
    else{
        printf("Invalid position or arrayis empty");
    }
    for(int i=0;i<n;i++){
        printf("%d ",a[i]);
    }
}
