#include<stdio.h>
#include<stdlib.h>
int main()
{
    int *ptr;
    int *arr,N;
    int sum=0,max;
    
    printf("Enter the elements\n");
    scanf("%d",&N);
    
    arr=(int*)malloc(N * sizeof(int));
    if(arr==NULL)
    {
    printf("The element is failed!\n");
    return 1;
    }
    printf("enter %d integer\n",N);
    for(ptr=arr;ptr<arr+N;ptr++)
    scanf("%d",ptr);
    max=*arr;
    for(ptr=arr;ptr<arr+N;ptr++)
    {
    sum+=*ptr;
    if(*ptr>max)
    max=*ptr;
    }
    printf("\nSum=%d\n",sum);
    printf("Maximum=%d\n",max);
    free(arr);
}
